@model IEnumerable<WhatToEat.Domain.Models.Product>

@{
    ViewBag.Title = "Produkty";
}

<h2>Produkty</h2>

<p>
    @Html.ActionLink("Dodaj", "Create", null, new { @class = "btn btn-success"})
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@Url.Content(item.Image ?? "~")" alt="Brak zdjęcia" width="200"/>
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Podgląd", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
